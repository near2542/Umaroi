<%- include ('partials/header') %>

<div class="menu-wrapper">
    <div><h1>MENU</h1></div>
    <div class="menu-show">


<% if (foods.length > 0){%>
    <% foods.forEach((food)=> { %>
        
            <div class="menu-list">
                <% if (!food.img)  food.img = 'imgs/anonymous.jpg' %>
                <img src="<%= food.img %>" alt="">
                <p> <%= food.name %> 
                    <%= food.price %> บาท</p>
                <p class="description"><%= food.description %> </p>
            </div>
    

    <%}) %>  <!--end foreach-->

<% } else {%> <!--else-->

    <h1>MENU NOT FOUND</h1>

<% } %> <!-- end if / else-->
</div>
</div>
<%- include ('partials/footer') %>